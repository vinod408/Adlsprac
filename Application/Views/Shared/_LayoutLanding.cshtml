        <div class="cd-user-modal">
            <!-- this is the entire modal form, including the background -->
            <div class="cd-user-modal-container">
                <!-- this is the container wrapper -->
                <ul class="cd-switcher">
                    <li><a href="?#0">Sign in</a></li>
                    <li><a href="?#0">New account</a></li>
                </ul>
                <div ng-show="loadingimage" id="loading">
                    <img id="loading-image" src="~/Content/Registration/Image/loading-image.gif" alt="Loading..." />
                </div>
                <div ng-controller="LoginController">
                    <div id="cd-login">
                        <!-- log in form -->
                        <form action="" class="cd-form" id="login" name="login" ng-submit="LoginForm()">
                            <p class="fieldset">
                                <label class="image-replace cd-email" for="signin-email">E-mail</label>
                                <input class="full-width has-padding has-border" id="email" type="email" placeholder="E-mail" ng-model="UserModel.Useremail" required>
                                @*<span class="cd-error-message">Error message here!</span>*@
                            </p>
                            <p class="fieldset">
                                <label class="image-replace cd-password" for="signin-password">Password</label>
                                <input class="full-width has-padding has-border" id="password" type="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;" required ng-model="UserModel.password">
                                <a href="#0" class="hide-password">Show</a>
                                <span class="cd-error-message">Error message here!</span>
                            </p>
                            <p class="fieldset">
                                <label class="image-replace cd-username" for="signup-username">Role</label>
                                <input class="has-padding has-border" id="role" type="text" placeholder="-Role Select-" list="rolelist" ng-model="UserModel.Role" required>
                                <datalist id="rolelist">
                                    <option value="Admin">
                                    <option value="Manager">
                                    <option value="Operator">
                                </datalist>
                                @*<span class="cd-error-message">Error message here!</span>*@
                            </p>
                            <p class="fieldset">
                                <input type="checkbox" id="remember-me" checked>
                                <label for="remember-me">Remember me</label>
                            </p>
                            <p class="fieldset">
                                <input class="full-width" type="submit" value="Login">
                            </p>
                        </form>

                        <p class="cd-form-bottom-message"><a href="#0">Forgot your password?</a></p>
                        <!-- <a href="#0" class="cd-close-form">Close</a> -->
                    </div> <!-- cd-login -->
                </div>
                <div ng-controller="RegistrationController">
                        <div id="cd-signup">
                            <!-- sign up form -->

                            <form action="" class="cd-form" id="registration" name="registration" ng-submit="Registerform()">
                                <h6>{{errormessage}}</h6>
                                <p class="fieldset">
                                    <label class="image-replace cd-username" for="signup-username">Name</label>
                                    <input class="full-width has-padding has-border" id="firstname" type="text" placeholder="Name" minlength="3" ng-model="UserModel.fullName" required>
                                    <span class="cd-error-message">Error message here!</span>
                                </p>
                                <p class="fieldset">
                                    <label class="image-replace cd-email" for="signup-email">E-mail</label>
                                    <input class="full-width has-padding has-border" id="email" type="email" placeholder="E-mail" ng-model="UserModel.Useremail" required>
                                    @*<span class="cd-error-message">Error message here!</span>*@
                                </p>          
                                <p class="fieldset">
                                    <label class="image-replace cd-password" for="signup-password">Password</label>
                                    <input class="full-width has-padding has-border" id="password1" type="password" minlength="5" placeholder="password" ng-model="UserModel.password" required>
                                    <a href="#0" class="hide-password">Show</a>
                                    <span class="cd-error-message">Error message here!</span>
                                </p>
                                <p class="fieldset">
                                    <label class="image-replace cd-password" for="signup-password">Confirm Password</label>
                                    <input class="full-width has-padding has-border" id="password_again" type="password" minlength="5" placeholder="Confirm password" required>
                                    <a href="#0" class="hide-password">Show</a>
                                    <span class="cd-error-message">Error message here!</span>
                                    <span id='message'></span>
                                </p>
                                <p class="fieldset">
                                    <label class="image-replace cd-username" for="signup-username">Role</label>
                                    <input class="has-padding has-border" id="role" type="text" placeholder="-Role Select-" list="rolelist" ng-model="UserModel.Role" required>
                                    <datalist id="rolelist">
                                        <option value="Admin">
                                        <option value="Manager">
                                        <option value="Operator">
                                    </datalist>
                                    @*<span class="cd-error-message">Error message here!</span>*@
                                </p>
                                <p class="fieldset">
                                    <input type="checkbox" id="accept-terms" required>
                                    <label for="accept-terms">I agree to the <a href="#0">Terms</a></label>
                                </p>
                                <p class="fieldset">
                                    <input class="full-width" type="submit" value="Create account">
                                </p>
                            </form>
                            <!-- <a href="#0" class="cd-close-form">Close</a> -->
                        </div> <!-- cd-signup -->
                    </div>
                <div id="cd-reset-password">
                        <!-- reset password form -->
                        <p class="cd-form-message">Lost your password? Please enter your email address. You will receive a link to create a new password.</p>
                        <form class="cd-form">
                            <p class="fieldset">
                                <label class="image-replace cd-email" for="reset-email">E-mail</label>
                                <input class="full-width has-padding has-border" id="reset-email" type="email" placeholder="E-mail">
                                <span class="cd-error-message">Error message here!</span>
                            </p>
                            <p class="fieldset">
                                <input class="full-width has-padding" type="submit" value="Reset password">
                            </p>
                        </form>
                        <p class="cd-form-bottom-message"><a href="#0">Back to log-in</a></p>
                    </div> <!-- cd-reset-password -->
