        <script>
            $('#password1,#password_again').on('focusout', function () {
                if ($('#password1').val() != '' && $('#password_again').val() != '')
                {
                    if ($('#password1').val() == $('#password_again').val()) {
                        $('#message').html('Password Matched').css('color', 'green');
                    }
                    else {
                        $('#message').html('Password not Matched').css('color', 'red');
                    }
                }
                

            });
        </script>
