<div id="example" ng-app="KendoDemos">
    <div ng-controller="MyCtrl">
        <div id="section">
            <ul>
                <li>
                    <a style="font-size:medium" href="#" ng-click="ctrltestenable()" title="Test Suites">
                        Test Suites
                    </a>
                </li>
                <li>
                    <a style="font-size:medium" href="#" ng-click="ctrltestcaseenable()" title="Test Case">
                        Test Cases
                    </a>
                </li>
                <li>
                    <a style="font-size:medium" href="#" ng-click="ctrlpipeenable()" title="Pipeline stages">
                        Pipeline Stages
                    </a>
                </li>
            </ul>
        </div>
        <hr />
        <div ng-show="loading" class="k-loading-mask" style="width:100%;height:100%">
            <span class="k-loading-text">Loading...</span>
            <div class="k-loading-image">
                <div class="k-loading-color">
                </div>
            </div>
        </div>
        <script id="template" type="text/x-kendo-template">
            <label class="search-label" for="searchBox">Search Grid:</label>
            <input type="search" id="searchBox" class="k-textbox" style="width: 250px" />
            <input type="button" id="btnSearch" class="k-button" value="Search" />
            <input type="button" id="btnReset" class="k-button" value="Reset" />
        </script>
        <div style="padding-left:58em">
            @*Search <input kendo-auto-complete ng-model="myFruit" k-options="customersDataSource"  />*@

            @*<input type="text" kendo-auto-complete k-data-source="customersDataSource" k-data-text-field="'TestSuite1'" k-data-value-field="'TestSuiteId'"/>*@
        </div>
        <kendo-grid options="mainGridOptions" ng-show="testsuiteenable">
            <div k-detail-template>
                <kendo-tabstrip>
                    <ul>
                        <li class="k-state-active">TestCases</li>
                        @*<li>Contact information</li>*@
                    </ul>
                    <div>
                        <div kendo-grid k-options="detailGridOptions(dataItem)"></div>
                    </div>
                    @*<div>
                            <ul class="contact-info-form">
                                <li><label>Country:</label> <input class="k-textbox" ng-model="dataItem.Country" /></li>
                                <li><label>City:</label> <input class="k-textbox" ng-model="dataItem.City" /></li>
                                <li><label>Address:</label> {{dataItem.Address}}</li>
                                <li><label>Home phone:</label> {{dataItem.HomePhone}}</li>
                            </ul>
                        </div>*@
                </kendo-tabstrip>
            </div>
        </kendo-grid>

        <kendo-grid options="testGridOptions" ng-show="testcaseenable">
        </kendo-grid>
        <kendo-grid options="pipelineGridOptions" ng-show="pipelineenable">
        </kendo-grid>

    </div>
</div>
